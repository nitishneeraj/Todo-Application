<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>TodoWebApp</display-name>
 
 <!--  Mapping SignUp.jsp to SignUp.java servlet  -->
 <servlet>
 <servlet-name>signUp</servlet-name>
 <servlet-class>com.todo.Servlets.SignUp</servlet-class>
 </servlet>
 <servlet-mapping>
 <servlet-name>signUp</servlet-name>
 <url-pattern>/signup</url-pattern>
 </servlet-mapping>
 
  <!--  Mapping Login.jsp to Login.java servlet -->
 <servlet>
 <servlet-name>login</servlet-name>
 <servlet-class>com.todo.Servlets.Login</servlet-class>
 </servlet>
 <servlet-mapping>
 <servlet-name>login</servlet-name>
 <url-pattern>/login</url-pattern>
 </servlet-mapping>
 
 <!--  Mapping AddTodo.jsp to AddTodo.java servlet -->
  <servlet>
 <servlet-name>addtodo</servlet-name>
 <servlet-class>com.todo.Servlets.AddTodo</servlet-class>
 </servlet>
 <servlet-mapping>
 <servlet-name>addtodo</servlet-name>
 <url-pattern>/addtodo</url-pattern>
 </servlet-mapping>
 
 <!--  Mapping Delete form inside UserHome.jsp to Delete.java servlet -->
 <servlet>
 <servlet-name>deletetodo</servlet-name>
 <servlet-class>com.todo.Servlets.DeleteTodo</servlet-class>
 </servlet>
 <servlet-mapping>
 <servlet-name>deletetodo</servlet-name>
 <url-pattern>/delete</url-pattern>
 </servlet-mapping>
 
 
 <!-- Mapping Logout button in UserHome.jsp to Logout.java servlet -->
 <servlet>
 <servlet-name>logout</servlet-name>
 <servlet-class>com.todo.Servlets.Logout</servlet-class>
 </servlet>
 <servlet-mapping>
 <servlet-name>logout</servlet-name>
 <url-pattern>/logout</url-pattern>
 </servlet-mapping>
 
</web-app>